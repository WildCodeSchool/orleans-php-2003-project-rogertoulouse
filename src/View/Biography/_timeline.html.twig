<div class="timeline w-100">
    {% for year, biographies in data %}
        <h2 id="{{ year }}">{{ year }}</h2>
        {% for biography in biographies %}
            <ul class="timeline-items">
                <li class="timeline-item {{ biography.name is not empty ? 'centered' :loop.parent.loop.index0 is odd ? 'inverted'}}">
                    {% if biography.name is not empty %}
                        <a href="/Artworks/single/{{ biography.idArtwork }}">
                            <img class="picture" src="assets/upload/{{ biography.image }}" alt="{{ biography.category ~ ' : ' ~ biography.name }}">
                        </a>
                    {% endif %}
                    <p class="info">{{ biography.name|nl2br }}{{ biography.info|nl2br }}</p>
                    <p class="description">{{ biography.description|nl2br }}</p>
                </li>
            </ul>
        {% endfor %}
    {% else %}
        <li>Nothing to display</li>
    {% endfor %}
</div>