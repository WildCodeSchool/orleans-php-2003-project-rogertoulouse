{% endblock %}

{% block content %}
    <nav class="leftNavBar h-80 col-11 col-xl-1 m-0 position-fixed pt-5">
        <div class="leftNavLinks h-100 d-flex flex-xl-column link nav justify-content-xl-around justify-content-around align-items-stretch" id="v-pills-tab" aria-orientation="vertical">
            <a class="leftNavLink nav-link btn {{ active == 'home' ? 'active' : ''}}"
